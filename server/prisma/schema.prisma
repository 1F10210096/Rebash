datasource db {
  provider = "postgresql"
  url      = env("API_DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Task {
  id        String   @id
  label     String
  done      Boolean
  createdAt DateTime
}

model Room {
  roomId    String   @id
  comment   String[]
  createdAt DateTime
  userasse  String[]
}

model user {
  userId     String   @id
  comment    String
  roomIdasse String[]
}

model message {
  id2       String   @id
  roomId    String
  sender_id String
  content   String
  sent_at   DateTime
  username  String
}
