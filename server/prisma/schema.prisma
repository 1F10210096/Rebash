datasource db {
  provider = "postgresql"
  url      = env("API_DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Task {
  id        String   @id
  label     String
  done      Boolean
  createdAt DateTime
}

model Room {
  roomId    String   @id
  comment   String[]
  createdAt DateTime
  userasse  String[]
}

model user {
  userId     String   @id
  comment    String
  roomIdasse String[]
  birth      String
  sex        Int
  status     Int
  sender_id  String[]
  receive_id String[]
  friend     String[]
}

model message {
  id2       String   @id
  roomId    String
  sender_id String
  content   String
  sent_at   DateTime
  username  String
}

model infomessage {
  id2       String @id
  roomId    String
  sender_id String
  content   String
  sent_at   Int
  username  String
}

model DM {
  roomId    String   @id
  comment   String[]
  createdAt DateTime
  myId      String
  partnerId String
}
