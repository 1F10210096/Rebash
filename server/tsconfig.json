{
  "compilerOptions": {
    "downlevelIteration": true,
    "esModuleInterop": true,
    "lib": ["dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "$/*": ["./*"],
      "$prisma/*": ["./node_modules/.prisma/*"]
    },
    "rootDir": ".",
    "skipLibCheck": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "target": "es6",
    "incremental": true
  },
  "include": [
    "**/*.ts",
    "scripts/*.js",
    "aspida.config.js",
    ".eslintrc.js",
    "index.ts",
    "api/index.mjs"
  ],
  "exclude": ["node_modules"]
}
